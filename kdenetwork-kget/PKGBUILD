# $Id: PKGBUILD 280443 2016-11-10 18:31:41Z arojas $
# Maintainer: Felix Yan <felixonmars@archlinux.org>
# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kdenetwork-kget
pkgver=16.08.3
pkgrel=1
pkgdesc='Download Manager'
url='http://kde.org/applications/internet/kget/'
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
groups=('kde-applications' 'kdenetwork', 'modified')
depends=('kdebase-runtime' 'libmms')
makedepends=('cmake' 'automoc4' 'boost' 'libktorrent4')
optdepends=('libktorrent4: torrent support')
source=("http://download.kde.org/stable/applications/${pkgver}/src/kget-${pkgver}.tar.xz")
sha1sums=('064151561c1823e21c329079da126ea3b9e34920')

prepare() {
  pushd kget-$pkgver
  for p in ../../patches/*; do
    patch -p1 < $p
  done
  popd

  mkdir -p build
}

build() {
  cd build
  cmake ../kget-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DKDE4_BUILD_TESTS=OFF \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DWITH_NepomukCore=OFF \
    -DWITH_NepomukWidgets=OFF \
    -DWITH_KDE4Workspace=OFF \
    -DWITH_QGpgme=OFF
  make
}

package() {
  cd build
  make DESTDIR=$pkgdir install
}
